<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/student_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingStart="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parent_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_fonts"
            android:layout_marginTop="10dp"
            android:padding="5sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mobile_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/parent_occupation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schoolname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_fonts"
            android:padding="5sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dob_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:fontFamily="@font/gotham_fonts"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>