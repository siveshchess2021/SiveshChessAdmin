<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_theme"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <!--    <android.support.constraint.utils.ImageFilterView-->
    <!--        android:id="@+id/svcecanteenlogoid"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="100dp"-->
    <!--        android:src="@drawable/svcecanteenlogo"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/siveshlogo"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signinbg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/svcecanteenlogoid"
            android:fontFamily="@font/gotham_fonts"
            android:text="Sivesh Chess Academy"
            android:textColor="#3C2690"
            android:layout_marginStart="30dp"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/svcecanteenlogoid"
            android:fontFamily="@font/gotham_fonts"
            android:text="Admin portal"
            android:textColor="#9A9CA0"
            android:layout_marginStart="30dp"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/username_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:defaultFocusHighlightEnabled="true"
            android:hint="Username"
            android:textColor="#3C2690"
            app:met_textColor="#3C2690"
            app:met_primaryColor="@color/app_purp"
            app:met_baseColor="@color/app_purp"
            android:textColorHighlight="#3C2690"
            android:textColorHint="#3C2690"
            app:met_underlineColor="#3C2690"
            app:met_floatingLabelTextColor="#3C2690"
            android:fontFamily="@font/gotham_fonts"
            app:met_floatingLabelAnimating="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Username"
            app:met_textColorHint="#3C2690" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:defaultFocusHighlightEnabled="true"
            android:hint="password"
            android:fontFamily="@font/gotham_fonts"
            android:textColor="#3C2690"
            app:met_primaryColor="@color/app_purp"
            app:met_baseColor="@color/app_purp"
            android:textColorHighlight="#3C2690"
            android:inputType="textPassword"
            android:textColorHint="#3C2690"
            app:met_floatingLabelTextColor="#3C2690"
            app:met_underlineColor="#3C2690"
            app:met_textColor="#3C2690"
            app:met_floatingLabelAnimating="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password (must be above 8 character)"
            app:met_textColorHint="#3C2690" />

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Sign In!"
            android:textAllCaps="false"
            android:textColor="#feffff"
            android:fontFamily="@font/gotham_fonts"/>
    </LinearLayout>

</LinearLayout>